                <%= cdn_image :state_morelos, class: "col-span-2 max-h-12 w-full object-contain lg:col-span-1",  alt:"Transistor", width:"158", height:"48" %>
                <%= cdn_image :ccec_logo, class: "col-span-2 max-h-12 w-full object-contain lg:col-span-1",  alt:"Transistor", width:"158", height:"48" %>
            </div>
        </div>

        <div class="mx-auto mt-32 max-w-7xl px-6 sm:mt-40 lg:px-8">
            <div class="mx-auto max-w-2xl lg:mx-0">
                <h2 class="text-pretty text-4xl font-semibold tracking-tight text-white sm:text-5xl"><%= t("learn_more.contributors.title") %></h2>
                <p class="mt-6 text-lg/8 text-gray-300"><%= t("learn_more.contributors.body") %></p>
            </div>
            <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-14 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 xl:grid-cols-4">
