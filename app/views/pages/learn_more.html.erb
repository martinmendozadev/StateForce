            <h2 class="text-pretty text-4xl font-semibold tracking-tight text-white sm:text-5xl"><%= t("learn_more.features.title") %></h2>
            <p class="mt-6 text-lg/8 text-gray-400"><%= t("learn_more.what_is.body") %></p>
          </div> 
            <dl class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 text-base/7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
                <% t("learn_more.features.list").each do |feature| %>
                    <div>
                        <dt class="font-semibold text-white"><%= feature[:title] %></dt>
                        <dd class="mt-1 text-gray-400"><%= feature[:description] %></dd>
                    </div>
                <% end %>
            </dl> 
        </div>

        <!-- Logo cloud -->
        <div class="relative isolate -z-10 mt-32 sm:mt-48">
          <div class="absolute inset-x-0 top-1/2 -z-10 flex -translate-y-1/2 justify-center overflow-hidden [mask-image:radial-gradient(50%_45%_at_50%_55%,white,transparent)]">
            <svg class="h-[40rem] w-[80rem] flex-none stroke-gray-800" aria-hidden="true">
