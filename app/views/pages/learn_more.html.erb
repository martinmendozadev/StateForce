<div class="select-none">
    <header class="absolute inset-x-0 top-0 z-10 max-w-7xl mx-auto">
        <nav class="flex items-center justify-between pt-2 px-8" aria-label="Global">
            <%= link_to root_path, class: "p-4" do %>
                <%= cdn_image :logo_white, class: "h-16", alt: t("landing.company_name") %>
            <% end %>

            <%= link_to "#{t("landing.nav.login")} <span aria-hidden='true'>&rarr;</span>".html_safe, new_user_session_path, class: "text-sm font-semibold p-4" %>
        </nav>
    </header>

    <div class="mx-auto max-w-7xl px-6 pb-32 pt-36 sm:pt-60 lg:px-8 lg:pt-32 overflow-hidden">
        <div class="mx-auto max-w-2xl gap-x-14 lg:mx-0 lg:flex lg:max-w-none lg:items-center">
                <div class="relative w-full lg:max-w-xl lg:shrink-0 xl:max-w-2xl">
                    <h1 class="text-pretty text-5xl font-semibold tracking-tight sm:text-7xl"><%= t("learn_more.title") %></h1>
                    <p class="mt-8 text-pretty text-lg font-medium text-text-secondary sm:max-w-md sm:text-xl lg:max-w-none">
                        <%= t("learn_more.what_is.body") %>
                    </p>
                </div>
                <div class="mt-14 flex justify-end gap-8 sm:-mt-44 sm:justify-start sm:pl-20 lg:mt-0 lg:pl-0">
                    <div class="ml-auto w-44 flex-none space-y-8 pt-32 sm:ml-0 sm:pt-80 lg:order-last lg:pt-36 xl:order-none xl:pt-80">
                        <div class="relative">
                            <%= cdn_image :lm_image1, class: "aspect-[2/3] w-full rounded-xl object-cover shadow-lg", alt:"team image 1" %>
                            <div class="absolute inset-0 rounded-xl ring-1 ring-inset ring-background-100"></div>
                        </div>
                    </div>
                    <div class="mr-auto w-44 flex-none space-y-8 sm:mr-0 sm:pt-52 lg:pt-36">
                        <div class="relative">
                            <%= cdn_image :lm_image2, class: "aspect-[2/3] w-full rounded-xl object-cover shadow-lg", alt:"team image 2" %>
                            <div class="absolute inset-0 rounded-xl ring-1 ring-inset ring-background-100"></div>
                        </div>
                        <div class="relative">
                            <%= cdn_image :lm_image3, class: "aspect-[2/3] w-full rounded-xl5 object-cover shadow-lg", alt:"team image 3" %>
                            <div class="absolute inset-0 rounded-xl ring-1 ring-inset ring-background-100"></div>
                        </div>
                    </div>
                    <div class="w-44 flex-none space-y-8 pt-32 sm:pt-0">
                        <div class="relative">
                            <%= cdn_image :lm_image4, class: "aspect-[2/3] w-full rounded-xl object-cover shadow-lg", alt:"team image 4" %>
                            <div class="absolute inset-0 rounded-xl ring-1 ring-inset ring-background-100"></div>
                        </div>
                        <div class="relative">
                            <%= cdn_image :lm_image5, class: "aspect-[2/3] w-full rounded-xl object-cover shadow-lg", alt:"team image 5" %>
                            <div class="absolute inset-0 rounded-xl ring-1 ring-inset ring-background-100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <div class="mx-auto max-w-7xl px-6 sm:mt-0 lg:px-8 xl:-mt-8">
        <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
            <div class="mt-6 flex flex-col gap-x-8 gap-y-20 lg:flex-row">
                <!-- Left -->
                <div class="lg:w-full lg:max-w-2xl lg:flex-auto">
                    <h2 class="text-pretty text-4xl font-semibold tracking-tight sm:text-5xl"><%= t("learn_more.mission.title") %></h2>
                    <p class="my-4 text-base leading-7 text-text-300"><%= t("learn_more.mission.body") %></p>
                    <h2 class="text-pretty text-4xl font-semibold tracking-tight sm:text-5xl"><%= t("learn_more.vision.title") %></h2>
                    <p class="mt-4 text-base leading-7 text-text-300"><%= t("learn_more.vision.body") %></p>
                </div>
                <div class="lg:flex lg:flex-auto lg:justify-center">
                    <dl class="w-64 space-y-8 xl:w-80">
                        <div class="flex flex-col-reverse gap-y-4">
                            <dt class="text-base/7 text-text-300"><%= t("learn_more.statistics.emergency_services") %></dt>
                            <dd class="text-5xl font-semibold tracking-tight"><%= t("learn_more.statistics.emergency_services_value") %></dd>
                        </div>
                        <div class="flex flex-col-reverse gap-y-4">
                            <dt class="text-base/7 text-text-300"><%= t("learn_more.statistics.assets_saved") %></dt>
                            <dd class="text-5xl font-semibold tracking-tight"><%= t("learn_more.statistics.assets_saved_value") %></dd>
                        </div>
                        <div class="flex flex-col-reverse gap-y-4">
                            <dt class="text-base/7 text-text-300"><%= t("learn_more.statistics.covered_territory") %></dt>
                            <dd class="text-5xl font-semibold tracking-tight"><%= t("learn_more.statistics.covered_territory_value") %></dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Image section -->
        <div class="mt-32 mx-auto max-w-7xl">
            <%= cdn_image :lm_image6, class: "aspect-[5/2] w-full object-cover rounded-3xl", alt:"team members" %>
        </div>

        <!-- Values section -->
        <div class="mx-auto mt-32 max-w-7xl px-8">
            <div class="mx-auto max-w-2xl">
                <h2 class="text-pretty text-4xl font-semibold tracking-tight sm:text-5xl"><%= t("learn_more.features.title") %></h2>
                <p class="mt-6 text-lg text-text-300"><%= t("learn_more.features.body") %></p>
            </div> 
            <dl class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
                <% t("learn_more.features.list").each do |feature| %>
                    <div class="flex flex-col gap-y-2">
                        <dt class="font-semibold"><%= feature[:title] %></dt>
                        <dd class="text-text-300"><%= feature[:description] %></dd>
                    </div>
                <% end %>
            </dl> 
        </div>

        <!-- Logo cloud -->
        <div class="mt-32">
            <h2 class="text-center text-lg font-semibold"><%= t("learn_more.trusted_by.title") %></h2>
            <div class="mx-auto mt-10 flex flex-wrap justify-around gap-16">
                <%= cdn_image :firefighter_icon, class: "object-contain  max-w-32", alt:"Bomberos" %>
                <%= cdn_image :ceccom_logo, class: "object-contain max-w-32", alt:"Cruz Roja Morelos" %>
                <%= cdn_image :cemer_logo, class: "object-contain max-w-32", alt:"CEMER" %>
                <%= cdn_image :civil_protection_logo, class: "object-contain max-w-32", alt:"ProtecciÃ³n Civil" %>
                <%= cdn_image :imss_logo, class: "object-contain max-w-32", alt:"IMSS" %>
                <%= cdn_image :issste_logo, class: "object-contain max-w-32", alt:"ISSSTE" %>
                <%= cdn_image :state_morelos, class: "object-contain max-w-32", alt:"Estado de Morelos" %>
                <%= cdn_image :ccec_logo, class: "object-contain max-w-32", alt:"CCEC" %>
            </div>
        </div>

        <div class="mx-auto mt-32 max-w-7xl px-8">
            <div class="max-w-2xl mx-auto">
                <h2 class="text-pretty text-4xl font-semibold tracking-tight sm:text-5xl"><%= t("learn_more.contributors.title") %></h2>
                <p class="mt-6 text-lg text-text-300"><%= t("learn_more.contributors.body") %></p>
            </div>
            <ul role="list" class="mx-auto mt-20 max-w-2xl">
                <li>
                    <%= cdn_image :lm_image7, class: "aspect-[14/13] w-full rounded-2xl object-cover", alt:"Founder" %> 
                    <h3 class="mt-6 text-lg font-semibold tracking-tight">Martin Mendoza</h3>
                    <p class="text-text-300">Founder / CEO</p>
                    <p class="text-sm text-text-300">UTC -6</p>
                </li>
            </ul>
        </div>
    </div>

    <footer class="mt-16 sm:mt-32">
        <div class="mx-auto max-w-7xl overflow-hidden px-6 py-20 sm:py-24 lg:px-8">
            <p class="mt-10 text-center text-sm/6 text-text-disabled">&copy; StateForce, Inc. All rights reserved.</p>
        </div>
    </footer>
</div>